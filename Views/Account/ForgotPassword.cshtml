@model Jobsystem.ViewModel.SendMailVM

@{
    ViewData["Title"] = "Forgot Password";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="~/css/login.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<form class="form" method="post" asp-action="SendMail" >
<div class="container-fluid d-flex justify-content-center align-items-center min-vh-100">
    <div class="row shadow rounded-3 overflow-hidden w-100" style="max-width: 1200px;">
        
        <!-- 左侧装饰区域 -->
        <div class="col-12 col-lg-5 d-none d-lg-block p-0">
            <div class="h-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="text-center text-white">
                    <i class="bi bi-shield-lock" style="font-size: 4rem;"></i>
                    <h3 class="mt-3">Secure Password Reset</h3>
                    <p class="mb-0">Enter your email to receive reset instructions</p>
                </div>
            </div>
        </div>

        <!-- 右侧表单 -->
        <div class="col-12 col-lg-7 p-4 p-lg-5 d-flex flex-column justify-content-center">
            <h2 class="workify-title mb-4">Workify | Reset Password</h2>

            <div class="mb-3">
                <label class="form-label fw-bold">Email <span class="text-danger">*</span></label>
                    <input id="email" type="email" class="form-control" placeholder="Enter your email" asp-for="Email" autofocus required>
                    <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button class="btn btn-dark w-100">SEND</button>

        </div>
    </div>
</div>
</form>

@section Scripts {
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Forgotpass.js"></script>
}